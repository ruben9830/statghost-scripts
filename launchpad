#!/bin/bash

clear

# Matrix Intro
echo -e "\e[1;34m"  # Kentucky Blue
echo "██████╗  ██████╗  ██████╗ ███████╗████████╗"
echo "██╔══██╗██╔═══██╗██╔═══██╗██╔════╝╚══██╔══╝"
echo "██████╔╝██║   ██║██║   ██║███████╗   ██║   "
echo "██╔═══╝ ██║   ██║██║   ██║╚════██║   ██║   "
echo "██║     ╚██████╔╝╚██████╔╝███████║   ██║   "
echo "╚═╝      ╚═════╝  ╚═════╝ ╚══════╝   ╚═╝   "
echo -e "\e[0m"  # Reset color
echo ""
echo -e "\e[1;36m💻 Welcome to Ghost's Script Lair 💻\e[0m"
sleep 2

while true; do
  clear
  echo -e "\e[1;34mSelect a tool to run:\e[0m"
  echo ""
  echo "  1) Find IP Info (Batch Mode)"
  echo "  2) DNS Query Tool"
  echo "  3) Email Flow Checker"
  echo "  4) SPF Failure Finder"
  echo "  5) Linux Command Trainer"
  echo "  6) SPF Spoof Test"
  echo "  7) Get Mail Client Settings"
  echo "  0) Exit"
  echo ""
  read -p "Enter your choice: " choice

  case $choice in
    1)
      clear
      ./find_ip_info_batch.sh
      echo ""
      read -p "⚡ Press ENTER to return to Launchpad..." dummy
      ;;
    2)
      clear
      ./dns_query_tool.sh
      echo ""
      read -p "⚡ Press ENTER to return to Launchpad..." dummy
      ;;
    3)
      clear
      ./email_flow_checker.sh
      echo ""
      read -p "⚡ Press ENTER to return to Launchpad..." dummy
      ;;
    4)
      clear
      ./spf_failure_finder.sh
      echo ""
      read -p "⚡ Press ENTER to return to Launchpad..." dummy
      ;;
    5)
      clear
      ./linux_command_trainer.sh
      echo ""
      read -p "⚡ Press ENTER to return to Launchpad..." dummy
      ;;
    6)
      clear
      ./spf_spoof_test.sh
      echo ""
      read -p "⚡ Press ENTER to return to Launchpad..." dummy
      ;;
    7)
      clear
      ./get_mail_settings.sh
      ;;
    0)
      echo ""
      echo "👋 Goodbye, Ghost."
      exit 0
      ;;
    *)
      echo ""
      echo "❌ Invalid option. Try again."
      echo ""
      read -p "⚡ Press ENTER to return to Launchpad..." dummy
      ;;
  esac
done
