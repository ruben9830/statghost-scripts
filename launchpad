#!/bin/bash

# GhostOps Launchpad – Spooky Edition
clear
echo -e "\e[95m"

# 🎵 Play spooky intro music (prefer ffplay, fallback to mpg123)
if [[ -f ./ghost-dreamer.mp3 ]]; then
  if command -v ffplay &> /dev/null; then
    ffplay -nodisp -autoexit -volume 60 ./ghost-dreamer.mp3 >/dev/null 2>&1 &
  elif command -v mpg123 &> /dev/null; then
    mpg123 -q ./ghost-dreamer.mp3 &
  else
    echo "🔇 No audio player (ffplay or mpg123) found. Skipping music..."
  fi
fi

# 👻 Glowing animated ghost banner
for i in {1..3}; do
  echo -e "\e[5m"
  cat << "EOF"
   ██████╗  ██████╗  ██████╗ ███████╗████████╗
  ██╔═══██╗██╔═══██╗██╔════╝ ██╔════╝╚══██╔══╝
  ██║   ██║██║   ██║██║  ███╗█████╗     ██║
  ██║   ██║██║   ██║██║   ██║██╔══╝     ██║
  ╚██████╔╝╚██████╔╝╚██████╔╝███████╗   ██║
   ╚═════╝  ╚═════╝  ╚═════╝ ╚══════╝   ╚═╝
     👻 Welcome to the GhostOps Launchpad 👻
EOF
  echo -e "\e[0m"
  sleep 0.4
  clear
done

# Static banner
echo -e "\e[92m"
cat << "EOF"
 ▓█████▄   ██▀███   ▒█████   ▄▄▄       ███▄ ▄███▓▓█████  ▄████▄
 ▒██▀ ██▌ ▓██ ▒ ██▒▒██▒  ██▒▒████▄    ▓██▒▀█▀ ██▒▓█   ▀ ▒██▀ ▀█
 ░██   █▌ ▓██ ░▄█ ▒▒██░  ██▒▒██  ▀█▄  ▓██    ▓██░▒███   ▒▓█    ▄
 ░▓█▄   ▌ ▒██▀▀█▄  ▒██   ██░░██▄▄▄▄██ ▒██    ▒██ ▒▓█  ▄ ▒▓▓▄ ▄██▒
 ░▒████▓  ░██▓ ▒██▒░ ████▓▒░ ▓█   ▓██▒▒██▒   ░██▒░▒████▒▒ ▓███▀ ░
  ▒▒▓  ▒  ░ ▒▓ ░▒▓░░ ▒░▒░▒░  ▒▒   ▓▒█░░ ▒░   ░  ░░░ ▒░ ░░ ░▒ ▒  ░
  ░ ▒  ▒    ░▒ ░ ▒░  ░ ▒ ▒░   ▒   ▒▒ ░░  ░      ░ ░ ░  ░  ░  ▒
  ░ ░  ░    ░░   ░ ░ ░ ░ ▒    ░   ▒   ░      ░      ░   ░
    ░        ░         ░ ░        ░  ░       ░      ░  ░░ ░
  ░                                                       ░

        👻 Welcome to the GhostOps Launchpad - Powered by GhostCheck v1.0
EOF
echo -e "\e[0m"
sleep 1

# Main menu loop
while true; do
  echo ""
  echo "Select a tool to run:"
  echo ""
  echo "  🧠 Intelligence & Recon"
  echo "  1) Find IP Info (Batch Mode)"
  echo "  2) WHOIS Lookup Tool"
  echo "  3) DNS & Host Health Checker"
  echo "  4) DNS Blacklist Check"
  echo "  5) HTTP Status Checker"
  echo "  6) System Info Report"
  echo "  7) TCP Port Scanner"
  echo ""
  echo "  📡 DNS & Mail Tools"
  echo "  8) DNS Query Tool"
  echo "  9) SPF Failure Finder"
  echo " 10) SPF Spoof Test"
  echo " 11) SPF IP Authorization Checker"
  echo " 12) Get Mail Client Settings"
  echo " 13) Full Mail Port Connectivity Test"
  echo ""
  echo "  🛠️ Web & Service Triage"
  echo " 14) Web Service Quick Test"
  echo " 15) Email Flow Checker"
  echo " 16) Log Error Grabber"
  echo " 17) AI Triage Assistant"
  echo ""
  echo "  🧪 Security & Packet Tools"
  echo " 18) Packet Test Lab (Wireshark)"
  echo " 19) TrapGhost – SNMP Trap Triage Tool"
  echo " 20) DHCP Hunter Tool"
  echo ""
  echo "  📓 Utility & Training"
  echo " 21) GhostOps Notes Viewer"
  echo " 22) Linux Command Trainer"
  echo " 23) Task Timer (Time Tracker)"
  echo " 24) NOC Troubleshooting Assistant"
  echo ""
  echo " 25) 🧠 Mail Full Diagnostic (advanced / standalone)"
  echo ""
  echo "  0) Exit"
  echo ""

  read -p "Enter your choice: " choice

  case $choice in
    1)  ./find_ip_info_batch.sh ;;
    2)  ./whois_lookup.sh ;;
    3)  read -p "Enter domain to scan: " domain
        ./domain_health_check.sh "$domain"
        read -p "🔁 Press Enter to return to menu..." ;;
    4)  ./blacklist_check.sh ;;
    5)  ./http_status_checker.sh ;;
    6)  ./sysinfo_report.sh ;;
    7)  ./port_scanner.sh ;;
    8)  ./dns_query_tool.sh ;;
    9)  ./spf_failure_finder.sh ;;
   10)  ./spf_spoof_test.sh ;;
   11)  ./spf_ip_checker.sh ;;
   12)  ./mail_settings_report.sh ;;
   13)  ./smtp_tester.sh ;;
   14)  ./web_quick_check.sh ;;
   15)  ./email_flow_checker.sh ;;
   16)  ./log_error_grabber.sh ;;
   17)  ./ai_triage.sh ;;
   18)  ./packet_lab.sh ;;
   19)  bash ./trapghost.sh --listen ;;
   20)  ./dhcp_hunter.sh ;;  # DHCP search by IP/MAC/date
   21)  ./view_ghostnotes.sh ;;
   22)  ./linux_command_trainer.sh ;;
   23)  ./timer_tool.sh ;;
   24)  ./statghost-cli.sh ;;
   25)  bash ./mail_full_diagnostic.sh ;;
    0)  echo "👻 Exiting GhostOps..."; sleep 1; break ;;
    *)  echo "❌ Invalid choice. Try again." ;;
  esac

  echo ""
  read -p "🔁 Press Enter to return to menu..."
  clear
done
